{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}

{% block javascripts %}
<script src="jquery/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="js/modal_code.js"></script>
{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="h-100" style="background-color: maroon">
    <h1 class="text-white">Register</h1>

    <div class="col-8 my-3 p-5 mx-auto bg-light">
    {{ form_start(registrationForm) }}
        <div class="form-error">
            {{ form_errors(registrationForm) }}
        </div>
        <div class="row">
        {{ form_row(registrationForm.email, {
            label: "Correo:"
        }) }}
        </div>
        <div class="row">
        {{ form_row(registrationForm.dni, {
            label: "DNI:"
        }) }}
        </div>
        <div class="row">
        {{ form_row(registrationForm.nombre, {
            label: "Nombre:"
        }) }}
        </div>
        <div class="row">
        <div class="col-6">
        {{ form_row(registrationForm.apellido1, {
            label: "Apellidos:"
        }) }}
        </div>
        <div class="col-6">
        {{ form_row(registrationForm.apellido2, {
            label: ""
        }) }}
        </div>
        </div>
        <div class="row">
        {{ form_row(registrationForm.password, {
            label: 'Contraseña:'
        }) }}
        </div>
        <div class="row">
        {{ form_row(registrationForm.genero, {
            label: "Género:"
        }) }}
        {{ form_row(registrationForm.telefono, {
            label: "Teléfono:"
        }) }}
        {{ form_row(registrationForm.localidad, {
            label: "Localidad:"
        }) }}
        </div>
        {% set terminos %}
        {{ form_row(registrationForm.agreeTerms, {
            label: "Acepto los términos y condiciones"
        }) }}
        {% endset %}
        {{ terminos|replace({"términos y condiciones":"<a id='modal-link' class='has-text-underline' href='#my-modal' data-toggle='modal'>términos y condiciones</a>"})|raw }}
        <button type="submit" class="btn">Register</button>
        <div id="my-modal" aria-hidden="true" aria-labelledby="myLargeModalLabel" class="modal fade bd-example-modal-lg" role="dialog" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    Términos y condiciones por defecto lorem ipsum y todo eso
                </div>
            </div>
        </div>
    {{ form_end(registrationForm) }}
    </div>
    </div>
{% endblock %}
